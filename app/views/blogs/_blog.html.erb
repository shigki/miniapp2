<div class="card">
    <div class="card-image waves-effect waves-block waves-light" style="background-image: url(<%= blog.image%>); height: 300px; background-size: 500px;background-repeat: no-repeat;">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4">ブログのタイトル：<%= blog.title %><i class="material-icons right">投稿者：<a href="/users/<%= blog.user_id %>"><%= blog.user.nickname %></a></i></span>
     <!--  <p><a href="#">本文を読む</a></p> -->
    </div>
    </div>
  </div>
  <a class="waves-effect waves-light btn-small" href="/blogs/<%= blog.id %>">このblogを読む  / </a>
  <% if user_signed_in? && current_user.id == blog.user_id %>
    <a class="waves-effect waves-light btn-small" href="/blogs/<%=blog.id%>/edit">あなたのこのblog編集する  / </a>
    <!-- <a class="waves-effect waves-light btn-small" href="/blogs/#{blog.id}", method: :delete %>このblogを削除する</a> -->
    <%= link_to "このblogを削除する", blog_path(blog), class:"waves-effect waves-light btn-small", method: :delete %>
  <% end %>
<script type="text/javascript" src="./app.js"></script>
